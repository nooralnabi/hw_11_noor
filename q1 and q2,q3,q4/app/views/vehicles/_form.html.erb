    <%= f.label :year %><br>
    <%= f.number_field :year , class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :make %><br>
    <%= f.text_field :make , class:"form-control",   id:"inputName" , required:true %>
  </div>
  <div class="field">
    <%= f.label :model %><br>
    <%= f.text_field :model , class:"form-control",  id:"inputName", required:true %>
  </div>
  <div class="field">
    <%= f.label :engine_type %><br>
    <%= f.text_field :engine_type , class:"form-control",  required:true %>
  </div>
  <div class="field">
    <%= f.label :license_plate %><br>
    <%= f.text_field :license_plate , class:"form-control",   required:true %>
  </div>
